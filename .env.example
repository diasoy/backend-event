# Database Configuration
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=ClusterName

# Server Configuration
PORT=3000

# JWT Secret
SECRET=your-jwt-secret-key

# Email Configuration (SMTP)
EMAIL_SMTP_SECURE=true
EMAIL_SMTP_PASS="your-email-password"
EMAIL_SMTP_USER="your-email@domain.com"
EMAIL_SMTP_PORT=465
EMAIL_SMTP_HOST="smtp.zoho.com"
EMAIL_SMTP_SERVICE_NAME="Zoho"

# Frontend Client Host
CLIENT_HOST="https://your-frontend-domain.vercel.app"

# SendGrid (optional)
SENDGRID_API_KEY=

# Midtrans Payment Gateway
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_TRANSACTION_URL="https://app.sandbox.midtrans.com/snap/v1/transactions"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Vercel Deployment
NODE_ENV=production
